.nav > li > a:hover,
.nav > li > a:focus {
  text-decoration: none;
  background-color: #bdc3c7;
  color: white;
  -o-transition:color .5s ease-out, background .5s ease-in;
-ms-transition:color .5s ease-out, background .5s ease-in;
-moz-transition:color .5s ease-out, background .5s ease-in;
-webkit-transition:color .5s ease-out, background .5s ease-in;

transition:color .5s ease-out, background .5s ease-in;
}
.navbar-nav > .active > a,
.navbar-nav > .active > a:hover,
.navbar-nav > .active > a:focus {
  color: #999;
  background-color: #ecf0f1;
}
.navbar-nav > .action > a,
.navbar-nav > .action > a:hover,
.navbar-nav > .action > a:focus {
  color: #fff;
  background-color: #e67e22;
}

.navbar {
	
  padding-right: 0px;
  padding-left: 0px;
  background-color: transparent;
  font-size: 20px;
}
.navbar-nav > li > a {
  background-color: transparent;
  padding-top: 15px;
  padding-bottom: 15px;
  line-height: 20px;
  color: #B50937;
  border-radius: 0px;
}
.navbar .nav > li > a {
  float: none;
  padding: 15px 9px 15px;
  color: #B50937;
  text-decoration: none;
  text-shadow: none;
}
@import "bootstrap-responsive";
button {
    padding: 0;
    margin:0;
    background-image: url("<%= asset_path '2.png' %>");
    border: 0;
    background-repeat: no-repeat;
}
.navbar-inner {
  min-height: 50px;
  padding-left: 20px;
  padding-right: 20px;
  background-color: transparent;
  background-image: none;
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff080808', endColorstr='#ff080808', GradientType=0);
  border: 1px solid transparent;
  -webkit-border-radius: 0px;
  -moz-border-radius: 0px;
  border-radius: 0px;
  -webkit-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.065);
  -moz-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.065);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.065);
  *zoom: 1;
}

