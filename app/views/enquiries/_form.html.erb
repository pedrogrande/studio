<%= simple_form_for @enquiry, html: { role: 'form' } do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control'}, autofocus: true, placeholder: 'Your name', label: false %>
  </div>
  <div class="form-group">
    <%= f.input :phone, input_html: { class: 'form-control'}, placeholder: 'Your phone', label: false %>
  </div>
  <div class="form-group">
    <%= f.input :email, input_html: { class: 'form-control'}, placeholder: 'Your email', label: false %>
  </div>
  <div class="form-group">
    <%= f.input :message, input_html: { class: 'form-control', rows: '5'}, placeholder: 'Your message', label: false %>
  </div>

    <%= f.submit 'Send message', class: 'btn btn-danger' %>
<% end %>
