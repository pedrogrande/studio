<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Studio" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Studio" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    
    
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    
  <style type="text/css">

          body{
              background: #000;
              margin:0;
              padding-top: 200px;
          }

          
          .movie{
              display:block;
          }

          .dida{
              position:fixed;
              bottom:0;
              font: 12px/14px Arial, sans-serif;
              color:white;
              padding:10px;
          }

          button{
              display:block;
              background:transparent;
              border:none;
              color:#FFF;
              font-size:18px;
              cursor:pointer;
          }

          button.command{
              display:inline-block;
          }

          button:hover, button.sel{
              color: #B50937;
          }

      </style>
   <%= javascript_include_tag "application" %>
    <script type="text/javascript">

        jQuery(function(){
            
            jQuery("button").not(".command").click(function(){
                jQuery("button").not(".command").removeClass("sel");
                jQuery(this).addClass("sel");
            });

            //debug functions
            jQuery("#bgndVideo").on("YTPStart", function(){ jQuery("#eventListener").html("YTPStart")});
            jQuery("#bgndVideo").on("YTPEnd", function(){ jQuery("#eventListener").html("YTPEnd")});
            jQuery("#bgndVideo").on("YTPPause", function(){ jQuery("#eventListener").html("YTPPause")});
            jQuery("#bgndVideo").on("YTPBuffering", function(){ jQuery("#eventListener").html("YTPBuffering")});

            jQuery("#bgndVideo").mb_YTPlayer();

        });

    </script>
    
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
  <div id="wrapper">
    <div class="console">
    <%= render 'layouts/navigation' %>
    <div class="container-fluid">
    <div class="row-fluid">
    <div class="col-md-12">
        
        <br><br>
        <small>
            <a href="#" class="command" onclick="jQuery('#bgndVideo').getPlayer().playVideo()"> <i class="icon-play"></i> </a>
                <a href="#" class="command" onclick="jQuery('#bgndVideo').getPlayer().pauseVideo()"> <i class="icon-pause"></i> </a>
                <a href="#" class="command" onclick="jQuery('#bgndVideo').toggleVolume()"><i class="icon-volume-up"></i> </a><br>
                
                </small>
        <button class="sel" onclick="jQuery('#bgndVideo').changeMovie({videoURL:'http://www.youtube.com/watch?v=FjD28_D6YWc'})">  balance   </button>
            <button onclick="jQuery('#bgndVideo').changeMovie({videoURL:'https://www.youtube.com/watch?v=t5dXnqtWcbU'})"> vitality </button>
            <button onclick="jQuery('#bgndVideo').changeMovie({videoURL:'J4fP9D0or7M'})"> my time </button>
            <button onclick="jQuery('#bgndVideo').changeMovie({videoURL:'9JNhJ8_LSKk'})"> confidence  </button>
            <button onclick="jQuery('#bgndVideo').changeMovie({videoURL:'NkSGwb6lCTM'})"> health </button>
            <button onclick="jQuery('#bgndVideo').changeMovie({videoURL:'izjH5VAR_m0'})"> strength </button>
            <button onclick="jQuery('#bgndVideo').changeMovie({videoURL:'_VLBWKsJk5k'})"> staying in shape  </button>
            <br>
            
    </div>

    <a id="bgndVideo" href="http://www.youtube.com/watch?v=FjD28_D6YWc" class="movie {opacity:.8, isBgndMovie:{width:'window',mute:false}, optimizeDisplay:true, showControls:false, loop: false, quality:'highres',addRaster:true, lightCrop:true}"> </a>
</div></div></div>
  
</div>
<div class="dida"></div>
             
<%= render 'layouts/footer' %>
              
  </body>
</html>
